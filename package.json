{
  "name": "vision-compare",
  "displayName": "Vision Compare（你的眼睛不是尺）",
  "type": "module",
  "version": "1.0.0",
  "description": "前端页面与设计稿像素级对比，提升还原率；支持覆盖、差异高亮、分屏对比、快捷键与持久化",
  "engines": {
    "node": "^22.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "pnpm run lint:tsc && pnpm run lint:eslint && pnpm run lint:stylelint",
    "lint:tsc": "vue-tsc",
    "lint:eslint": "eslint . --cache --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss,vue}\" --cache --fix",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@qxs-bns/components": "^0.0.81",
    "@vueuse/core": "^13.8.0",
    "vue": "^3.5.12"
